<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <suppress files="src[\\/]test" checks="MethodLength"/> <!-- some tests are detailed and over 75 lines -->
    <suppress files="src[\\/]test" checks="VariableDeclarationUsageDistance"/>
    <suppress files="src[\\/]test" checks="LeftCurly"/>
    <suppress files="src[\\/]test" checks="OneStatementPerLine"/>
    <suppress files="src[\\/]test" checks="AbbreviationAsWordInName"/>
    <suppress files="src[\\/]test" checks="OneTopLevelClass"/>
    <suppress files=".*logging.properties" checks="LineLength"/>

    <suppress files="src[\\/]test" id="LineLengthMain"/>
    <suppress files="src[\\/]main" id="LineLengthTest"/>
</suppressions>
