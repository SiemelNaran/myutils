<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <suppress files="/src/test" checks="MethodLength"/> <!-- some tests are detailed and are about 200 lines -->
    <suppress files="/src/test" checks="VariableDeclarationUsageDistance"/>
    <suppress files="/src/test" checks="LeftCurly"/> <!-- so can write lambda blocks on one line -->
    <suppress files="/src/test" checks="OneStatementPerLine"/> <!-- so can write lambda blocks on one line -->
    <suppress files="/src/test" checks="AbbreviationAsWordInName"/> <!-- for classes like PLUS, MINUS -->
</suppressions>
